{
  "name": "Michromeformats",
  "version": "0.3.0",
  "description": "Displays any microformats on the page. Supports hCard, hCalendar, hReview, hRecipe and geo. hCard can be downloaded or exported to Google Contacts. hCalendars will support exporting to Google Calendar soon. ",
  "page_action": {
    "default_icon": "images/microformats-logo-16.png",
    "default_title" : "Click to view the microformatsâ€¦",
    "popup": "popup.html"
  },
  "content_scripts": [ {
      "js": [
        "javascripts/utils/jquery.min.js",
        "javascripts/microformats/microformat.js",
        "javascripts/microformats/hcard.js",
        "javascripts/microformats/hcalendar.js",
        "javascripts/microformats/hreview.js",
        "javascripts/microformats/hrecipe.js",
        "javascripts/microformats/geo.js",
        "contentscript.js"
      ],
      "matches": [ "http://*/*", "https://*/*", "file://*/*" ]
   } ],
  "icons" : {
    "48" : "images/michromeformat_logo-48.png",
    "128" : "images/michromeformat_logo.png"
  },
  "permissions": [ "tabs", "http://*/*", "https://*/*" ],
  "background_page": "background.html"
}
